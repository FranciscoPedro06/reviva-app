<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="852dp"
    android:background="@drawable/background_gradrient"
    android:padding="20dp">

    <View
        android:id="@+id/shadow_layer"
        style="@style/container"
        android:layout_width="335dp"
        android:layout_height="650dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/ellipse_white"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <View
        android:id="@+id/view4"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ellipse_blue"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toTopOf="@+id/view3" />


    <View
        android:id="@+id/view2"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:background="@drawable/ellipse_white"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.437" />

    <View
        android:id="@+id/view5"
        android:layout_width="47dp"
        android:layout_height="23dp"
        android:background="@drawable/rounded_rect"
        app:layout_constraintBottom_toTopOf="@+id/nome"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.409" />

    <TextView
        android:id="@+id/title"
        android:layout_width="285dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="236dp"
        android:text="Cadastre-se"
        android:textColor="#50B2DD"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Digite seu nome completo"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <EditText
        android:id="@+id/email"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_below="@id/nome"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Digite seu email"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/senha"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Criar senha"
        android:inputType="textPassword"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/confirmaSenha"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer" />

    <EditText
        android:id="@+id/confirmaSenha"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Confirmar senha"
        android:inputType="textPassword"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.623"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        tools:layout_editor_absoluteY="458dp" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/ic_key2"
        app:layout_constraintEnd_toStartOf="@+id/senha"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_key"
        app:layout_constraintEnd_toStartOf="@+id/senha"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginBottom="35dp"
        android:src="@drawable/ic_user1"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/nome"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/ic_email"
        app:layout_constraintEnd_toStartOf="@+id/email"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toTopOf="@+id/shadow_layer" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_below="@id/confirmaSenha"
        android:layout_marginTop="32dp"
        android:backgroundTint="#50B2DD"
        android:text="Cadastrar"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/confirmaSenha" />

    <View
        android:id="@+id/view"
        android:layout_width="78dp"
        android:layout_height="1dp"
        android:layout_marginTop="44dp"
        android:background="#A1A0A0"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/btnCadastrar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="ou"
        android:textColor="#A1A0A0"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/btnCadastrar" />



    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Google logo"
        android:src="@drawable/ic_google"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="636dp" />

    <View
        android:layout_width="78dp"
        android:layout_height="1dp"
        android:layout_marginTop="44dp"
        android:background="#A1A0A0"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/btnCadastrar" />

    <TextView
        android:id="@+id/cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="JÃ¡ possui uma conta? Login"
        android:textColor="#000000"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>