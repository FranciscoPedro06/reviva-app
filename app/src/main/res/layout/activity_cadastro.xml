<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="852dp"
    android:background="@drawable/background_gradrient"
    android:padding="20dp">

    <!-- Card branco com sombra -->

    <!-- Elipses e ícone superior -->

    <View
        android:id="@+id/shadow_layer"
        style="@style/container"
        android:layout_width="335dp"
        android:layout_height="650dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/ellipse_white"
        app:layout_constraintEnd_toEndOf="@id/shadow_layer"
        app:layout_constraintStart_toStartOf="@id/shadow_layer"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ellipse_blue"
        app:layout_constraintEnd_toEndOf="@id/shadow_layer"
        app:layout_constraintStart_toStartOf="@id/shadow_layer"
        app:layout_constraintTop_toTopOf="@id/view3" />

    <View
        android:id="@+id/view7"
        android:layout_width="47dp"
        android:layout_height="23dp"
        android:background="@drawable/rounded_rect"
        app:layout_constraintEnd_toEndOf="@id/shadow_layer"
        app:layout_constraintStart_toStartOf="@id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <View
        android:id="@+id/view2"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:background="@drawable/ellipse_white"
        app:layout_constraintBottom_toBottomOf="@id/view4"
        app:layout_constraintEnd_toEndOf="@id/view3"
        app:layout_constraintStart_toStartOf="@id/view3"
        app:layout_constraintTop_toTopOf="@id/view3" />

    <!-- Título -->

    <!-- Campos de cadastro -->

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="80dp"
        android:gravity="center"
        android:text="Cadastre-se"
        android:textColor="#50B2DD"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Digite seu nome completo"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/shadow_layer"
        app:layout_constraintStart_toStartOf="@id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <EditText
        android:id="@+id/email"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Digite seu email"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/shadow_layer"
        app:layout_constraintStart_toStartOf="@id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@id/nome" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Criar senha"
        android:inputType="textPassword"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/shadow_layer"
        app:layout_constraintStart_toStartOf="@id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@id/email" />

    <EditText
        android:id="@+id/confirmaSenha"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Confirmar senha"
        android:inputType="textPassword"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/shadow_layer"
        app:layout_constraintStart_toStartOf="@id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@id/senha" />

    <!-- Ícones nos campos -->
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Ícone de usuário"
        android:src="@drawable/ic_user1"
        app:layout_constraintBottom_toBottomOf="@id/nome"
        app:layout_constraintEnd_toStartOf="@id/nome"
        app:layout_constraintTop_toTopOf="@id/nome" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Ícone de e-mail"
        android:src="@drawable/ic_email"
        app:layout_constraintBottom_toBottomOf="@id/email"
        app:layout_constraintEnd_toStartOf="@id/email"
        app:layout_constraintTop_toTopOf="@id/email" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Ícone de senha"
        android:src="@drawable/ic_key"
        app:layout_constraintBottom_toBottomOf="@id/senha"
        app:layout_constraintEnd_toStartOf="@id/senha"
        app:layout_constraintTop_toTopOf="@id/senha" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Ícone confirmar senha"
        android:src="@drawable/ic_key2"
        app:layout_constraintBottom_toBottomOf="@id/confirmaSenha"
        app:layout_constraintEnd_toStartOf="@id/confirmaSenha"
        app:layout_constraintTop_toTopOf="@id/confirmaSenha" />

    <!-- Botão de cadastro -->
    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#50B2DD"
        android:text="Cadastrar"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/shadow_layer"
        app:layout_constraintStart_toStartOf="@id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@id/confirmaSenha" />

    <!-- Divisor "ou" -->
    <View
        android:layout_width="78dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#A1A0A0"
        app:layout_constraintStart_toStartOf="@id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@id/btnCadastrar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="ou"
        android:textColor="#A1A0A0"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/shadow_layer"
        app:layout_constraintStart_toStartOf="@id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@id/btnCadastrar" />

    <View
        android:layout_width="78dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#A1A0A0"
        app:layout_constraintEnd_toEndOf="@id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@id/btnCadastrar" />

    <!-- Botão Google -->
    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Botão de cadastro com Google"
        android:src="@drawable/ic_google"
        app:layout_constraintEnd_toEndOf="@id/shadow_layer"
        app:layout_constraintStart_toStartOf="@id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <!-- Link para login -->
    <TextView
        android:id="@+id/cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Já possui uma conta? Login"
        android:textColor="@color/black"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="@id/shadow_layer"
        app:layout_constraintStart_toStartOf="@id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@id/imageView8" />

</androidx.constraintlayout.widget.ConstraintLayout>
