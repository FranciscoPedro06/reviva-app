    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#50B2DD"
    tools:context=".activities.ConfirmarSignoutActivity"> <TextView
    android:id="@+id/tvConfirmTitle"
    android:layout_width="0dp" android:layout_height="wrap_content"
    android:layout_marginTop="100dp" android:paddingHorizontal="24dp" android:text="Tem certeza que deseja sair ?" android:textColor="#FFFFFF"
    android:textSize="25sp"
    android:fontFamily="@font/poppins_regular"
    android:textAlignment="center"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
