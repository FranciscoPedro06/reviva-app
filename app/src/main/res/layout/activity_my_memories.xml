<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_my_memories"
    android:layout_width="411dp"
    android:layout_height="891dp"
    android:background="#D7F6FF">

    <!-- Fundo com blur -->
    <ImageView
        android:id="@+id/ellipse_blur"
        android:layout_width="473dp"
        android:layout_height="906dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="580dp"
        android:src="@drawable/ellipse_blur_down"
        android:scaleType="fitXY"
        android:contentDescription="Blurred ellipse background" />

    <!-- Título "Minhas memórias" -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Minhas memórias"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical" />

    <!-- Caixa 1 -->
    <RelativeLayout
        android:id="@+id/box1"
        android:layout_width="322dp"
        android:layout_height="168dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="74dp"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:clipToPadding="false"
        android:backgroundTintMode="src_in"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        android:outlineProvider="background"
        android:clipToOutline="true"
        android:background="@drawable/rounded_white_16dp">

        <TextView
            android:id="@+id/tvDateAvailable"
            android:layout_width="193dp"
            android:layout_height="74dp"
            android:text="15 Jun 2025 - Disponível"
            android:textColor="#616161"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="194dp"
            android:layout_height="74dp"
            android:text="35º aniversário"
            android:textColor="#616161"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp" />

        <!-- Botões dentro da caixa -->

        <TextView
            android:id="@+id/btnView1"
            android:layout_width="132dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/rounded_blue_8dp"
            android:gravity="center"
            android:text="Ver"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/btnDelete1"
            android:layout_width="135dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/rounded_gray_8dp"
            android:gravity="center"
            android:text="Apagar"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

    </RelativeLayout>

    <!-- Caixa 2 -->
    <RelativeLayout
        android:id="@+id/box2"
        android:layout_width="322dp"
        android:layout_height="168dp"
        android:layout_below="@id/box1"
        android:layout_marginTop="37dp"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:clipToPadding="false"
        android:background="@drawable/rounded_white_16dp">

        <TextView
            android:id="@+id/tvDateBlocked1"
            android:layout_width="255dp"
            android:layout_height="74dp"
            android:text="25 Jan 2026 - Bloqueada"
            android:textColor="#616161"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="240dp"
            android:layout_height="74dp"
            android:text="Carta para o futuro"
            android:textColor="#616161"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp" />

        <!-- Botões dentro da caixa -->

        <TextView
            android:id="@+id/btnView2"
            android:layout_width="132dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/rounded_lightblue_8dp"
            android:gravity="center"
            android:text="Ver"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/btnDelete2"
            android:layout_width="135dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/rounded_gray_8dp"
            android:gravity="center"
            android:text="Apagar"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Ícone lock -->
        <ImageView
            android:id="@+id/lockIcon2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_lock" />

    </RelativeLayout>

    <!-- Caixa 3 -->
    <RelativeLayout
        android:id="@+id/box3"
        android:layout_width="322dp"
        android:layout_height="168dp"
        android:layout_below="@id/box2"
        android:layout_marginTop="37dp"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:clipToPadding="false"
        android:background="@drawable/rounded_white_16dp">

        <TextView
            android:id="@+id/tvDateBlocked2"
            android:layout_width="255dp"
            android:layout_height="74dp"
            android:text="17 Dez 2027 - Bloqueada"
            android:textColor="#616161"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/tvTitle3"
            android:layout_width="240dp"
            android:layout_height="74dp"
            android:text="Bodas de papel"
            android:textColor="#616161"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp" />

        <!-- Botões dentro da caixa -->

        <TextView
            android:id="@+id/btnView3"
            android:layout_width="132dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/rounded_lightblue_8dp"
            android:gravity="center"
            android:text="Ver"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/btnDelete3"
            android:layout_width="135dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/rounded_gray_8dp"
            android:gravity="center"
            android:text="Apagar"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Ícone lock -->
        <ImageView
            android:id="@+id/lockIcon3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_lock" />

    </RelativeLayout>

    <!-- Botão Voltar -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/ic_back_black"
        android:contentDescription="Voltar" />

</RelativeLayout>
