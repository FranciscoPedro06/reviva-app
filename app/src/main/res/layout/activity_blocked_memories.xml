<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="411dp"
    android:layout_height="891dp"
    android:background="#D7F6FF">

    <!-- Ellipse azul embaçada no fundo -->
    <ImageView
        android:id="@+id/ellipse_blur"
        android:layout_width="411dp"
        android:layout_height="300dp"
        android:src="@drawable/ellipse_blur_down"
        android:scaleType="fitXY"
        android:contentDescription="Blurred ellipse background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <!-- Botão de voltar -->
    <ImageView
        android:id="@+id/btnVoltar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="23dp"
        android:src="@drawable/ic_back_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Título alinhado com botão voltar -->

    <!-- CARD 1 -->

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Memórias bloqueadas"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="322dp"
        android:layout_height="168dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnVoltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_lock"
                app:tint="#50B2DD" />

            <TextView
                android:id="@+id/card1Titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carta para o futuro"
                android:textSize="24sp"
                android:textColor="#616161"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:layout_below="@id/card1Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Esta memória só poderá ser visualizada a partir de 15 Jan 2026"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#616161"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_below="@id/card1Titulo"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="Apagar"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_gray_8dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- CARD 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="322dp"
        android:layout_height="168dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_lock"
                app:tint="#50B2DD" />

            <TextView
                android:id="@+id/card2Titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bodas de papel"
                android:textSize="24sp"
                android:textColor="#616161"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:layout_below="@id/card2Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Esta memória só poderá ser visualizada a partir de 17 Dez 2027"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#616161"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_below="@id/card2Titulo"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="Apagar"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_gray_8dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- CARD 3 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="322dp"
        android:layout_height="194dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/card2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_lock"
                app:tint="#50B2DD" />

            <TextView
                android:id="@+id/card3Titulo"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Minhas metas para os próximos 3 anos"
                android:textColor="#616161"
                android:textSize="24sp" />

            <TextView
                android:layout_below="@id/card3Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Esta memória só poderá ser visualizada a partir de 15 Jun 2028"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#616161"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_below="@id/card3Titulo"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="Apagar"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_gray_8dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
