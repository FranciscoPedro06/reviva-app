<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradrient"
    android:padding="20dp">

    <View
        android:id="@+id/shadow_layer"
        style="@style/container"
        android:layout_width="335dp"
        android:layout_height="650dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/ellipse_white"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <View
        android:id="@+id/view4"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ellipse_blue"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toTopOf="@+id/view3" />


    <View
        android:id="@+id/view2"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:background="@drawable/ellipse_white"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.437" />


    <View
        android:id="@+id/view5"
        android:layout_width="47dp"
        android:layout_height="23dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_rect"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer" />

    <TextView
        android:id="@+id/title"
        android:layout_width="285dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="@string/login"
        android:textColor="#50B2DD"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <EditText
        android:id="@+id/email"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_edittext"
        android:hint="@string/email"
        android:textSize="12sp"
        android:textColorHint="#616161"
        android:textColor="#000000"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_email"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_edittext"
        android:hint="@string/senha"
        android:inputType="textPassword"
        android:textSize="12sp"
        android:textColorHint="#616161"
        android:textColor="#000000"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_key"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <View
        android:id="@+id/view"
        android:layout_width="78dp"
        android:layout_height="1dp"
        android:background="#A1A0A0"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="296dp"
        android:text="@string/ou"
        android:textColor="#A1A0A0"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/title" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_google"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnEntar"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#50B2DD"
        android:text="@string/entrar"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer" />

    <View
        android:id="@+id/view6"
        android:layout_width="78dp"
        android:layout_height="1dp"
        android:layout_marginBottom="196dp"
        android:background="#A1A0A0"
        app:layout_constraintBottom_toBottomOf="@+id/shadow_layer"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.754"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer" />

    <TextView
        android:id="@+id/cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/cadastro"
        android:textColor="#000000"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="@+id/shadow_layer"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="@+id/shadow_layer"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />


</androidx.constraintlayout.widget.ConstraintLayout>